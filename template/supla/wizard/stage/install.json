{
  "api_version": "v1",
  "title": "{{SUPLA_NAME}}",
  "wizard": [
    {
      "title": "{{SUPLA_CONFIGURE}}",
      "schema": {
        "first_user_username": {
          "type": "string",
          "title": "First user usrname",
          "description": "E-mail of the first user to create in SUPLA Cloud",
		  "required": true
        },
        "ssh_port": {
          "type": "integer",
          "title": "SSH Port",
          "description": "{{SUPLA_SSH_HOST_PORT_DESC}}",
		  "required": true,
          "maximum": 65535
        }
      },
      "form": [
        "*"
      ]
    }
  ],
  "binding": {
    "type": "yaml",
    "file": "docker-compose.yml",
    "data": {
      "first_user_username": [
        "supla-cloud.environment.FIRST_USER_EMAIL",
        "supla-server.environment.BLA_USER_EMAIL"
      ],
      "ssh_port": [
        "supla.environment.SUPLA_SSH_PORT",
        "supla.ports[1]"
      ]
    }
  }
}
